# Study4Me Backend Docker Environment Configuration
# Copy this file to .env.docker and update with your actual values

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_actual_openai_api_key_here

# Storage Configuration (Container paths - do not change unless you know what you're doing)
RAG_DIR=/app/data/rag_storage
UPLOAD_DIR=/app/data/uploaded_docs
DB_PATH=/app/data/rag_tasks.db
GRAPHML_FILENAME=graph_chunk_entity_relation.graphml

# CORS Configuration
CORS_ORIGINS=*

# Background Task Configuration
MAX_WORKERS=4

# File Upload Limits
MAX_FILE_SIZE=100MB
SUPPORTED_FILE_TYPES=.pdf,.docx,.xls,.xlsx,.png,.jpg,.jpeg

# YouTube Configuration
YOUTUBE_MAX_RETRIES=3
YOUTUBE_TIMEOUT=30

# Web Scraping Configuration
WEB_SCRAPING_TIMEOUT=30
WEB_SCRAPING_USER_AGENT=Study4Me-Bot/1.0

# Logging Configuration
LOG_LEVEL=info

# Security (for production)
# ALLOWED_HOSTS=your-domain.com,localhost
# SECURE_SSL_REDIRECT=true